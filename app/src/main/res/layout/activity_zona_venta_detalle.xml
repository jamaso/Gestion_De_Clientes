<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZonaVentaDetlleActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_detalle_activity"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_zonzventa_detalle"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.javi.tarea_03.zonaVenta.ZonaVentaInsertarActivity">

    <TextView
        android:id="@+id/introducir_Datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:layout_marginTop="80dp"
        android:text="INTRODUCIR NUEVA ZONA"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:textColor="@android:color/holo_red_dark" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="60sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/introducir_NumZona">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextNumZona"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NÂº Zona"
            android:inputType="text|textAutoCorrect" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/introducir_Datos">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextLoclidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="localidad"
            android:inputType="text|textAutoComplete" />
    </android.support.design.widget.TextInputLayout>






</LinearLayout>
</android.support.design.widget.CoordinatorLayout>